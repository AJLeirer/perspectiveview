{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./dev/"],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "docs"
    },
    "plugins": [],
    "templates": {
        "systemName"            : "PerspectiveView",
        "footer"                : "Documentation for PerspectiveView by Danny Gr√ºbl",
        "copyright"             : "2015",
        "navType"               : "vertical",
        "theme"                 : "journal",
        "linenums"              : "true",
        "collapseSymbols"       : "true",
        "inverseNav"            : "true",
        "outputSourceFiles"     : "true" ,
        "outputSourcePath"      : "true"
    },
    "opts": {
        "template": "../ink-docstrap/template",
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "private": true
    }
}